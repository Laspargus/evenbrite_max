<h1>Attending</h1>
<p>With pleasure</p>


<%=link_to 'Edit event', edit_event_path(@event), class:'btn btn-success' %>



<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">email</th>
    </tr>
  </thead>
  <tbody>

<%@attendances.each_with_index do |attendance,index|%>

    <tr>
      <th scope="row"><%=index+1%></th>
      <td><%=attendance.user.first_name%></td>
      <td><%=attendance.user.last_name%></td>
      <td><%=attendance.user.email%></td>
    </tr>
    <%end%>
  </tbody>
</table>



